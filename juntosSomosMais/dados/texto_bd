CREATE DATABASE juntosSomosMaisbd;

USE juntosSomosMaisbd;

CREATE TABLE usuario (
	id INTEGER PRIMARY KEY AUTO_INCREMENT NOT NULL,
	senha VARCHAR(50) NOT NULL,
	lat DECIMAL(9,6),
	log DECIMAL(9,6),
	foto VARCHAR(200)
);

CREATE TABLE contato (
	id INTEGER PRIMARY KEY AUTO_INCREMENT NOT NULL,
	cont CHAR(11) NOT NULL,
	nome VARCHAR(50) NOT NULL,
	discR TINYINT(1) NOT NULL,
	acaoR TINYINT(3) NOT NULL,
	mTxt VARCHAR(150) NOT NULL,
	IdUs INTEGER NOT NULL,
	FOREIGN KEY(IdUs) REFERENCES usuario(id)
);

CREATE TABLE chamado (
	id INTEGER PRIMARY KEY AUTO_INCREMENT NOT NULL,
	lat DECIMAL(9,6),
	log DECIMAL(9,6),
	situa BIT,
	IdUsa INTEGER NOT NULL,
	FOREIGN KEY(IdUsa) REFERENCES usuario(id)
);

CREATE TABLE audio (
	id INTEGER PRIMARY KEY AUTO_INCREMENT NOT NULL,
	aud VARCHAR(200) NOT NULL,
	IdCha INTEGER NOT NULL,
	FOREIGN KEY(IdCha) REFERENCES chamado(id)
);
















